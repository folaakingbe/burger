<h1>Burgers!</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h2>Burgers Available!</h2>

            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{burger_name}}

                    <button class="eat" data-id="{{id}}" >
                    DEVOUR IT!
                    </button>
                    <br>
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-lg-6">
            <h2>Burgers Devoured!</h2>

            <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{burger_name}}
                    <br>
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="newBurger">Burger Name:</label>
    <input type="text" id="newBurger" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Available
  </div>

  <button type="submit">Add Burger</button>
</form>
